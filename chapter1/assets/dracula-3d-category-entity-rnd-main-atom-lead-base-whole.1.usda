#usda 1.0
(
    defaultPrim = "Category"
)

def "Category"
{
    class "DisplayableName"
    {
        custom string display_name
    }

    class "City" (
        prepend references = </Category/DisplayableName>
    )
    {
        custom string modern_name
    }

    class "Person" (
        prepend references = </Category/DisplayableName>
    )
    {
        custom rel places_visited
    }
}

